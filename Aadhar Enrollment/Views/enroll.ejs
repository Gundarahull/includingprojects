<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aadhar Enrollment</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
         body {
            background-color: #f0f2f5; /* Changed background color to a related shade */
            background-image: url('https://as2.ftcdn.net/v2/jpg/07/46/69/53/1000_F_746695393_8c0QxsAZ9gJ8RVkXyh4J34OMwYpsFqxh.jpg'); /* Image link */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: left top; /* Position at top left corner */
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: 50px auto;
            background-color: rgba(255, 255, 255, 0.7); /* Transparent white background */
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative; /* Added relative positioning */
        }
        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #005980;
        }
        .form-group label {
            font-weight: bold;
        }
        input[type="text"], input[type="number"], input[type="date"], input[type="tel"], select {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
        }
        input[type="submit"] {
            background-color: #005980;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }
        input[type="submit"]:hover {
            background-color: #004d66;
        }
        .aadhar-logo {
            position: absolute;
            top: 80px;
            right: 20px;
            width: 100px; /* Adjust the width as needed */
            height: auto;
        }
        .emblem-logo {
            position: absolute;
            top: 80px;
            left: 20px;
            width: 100px; /* Adjust the width as needed */
            height: auto;
        }
        .maha-logo {
            position: absolute;
            top: 140px; /* Adjust top position as needed */
            right: 20px;
            width: 150px; /* Adjust the width as needed */
            height: auto;
        }
        .admin-button {
            /* position: absolute; */
            top: 140px;
            left: 20px;
        }
    </style>
</head>
<body>
    <a href="/admin" class="btn btn-primary admin-button">ADMIN</a>
    <!-- <img src="https://upload.wikimedia.org/wikipedia/commons/e/ee/Azadi-Ka-Amrit-Mahotsav-Logo.png" alt="amar" class="maha-logo"> -->
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/55/Emblem_of_India.svg/1200px-Emblem_of_India.svg.png" alt="emblem" class="emblem-logo">
    <img src="https://upload.wikimedia.org/wikipedia/en/thumb/c/cf/Aadhaar_Logo.svg/250px-Aadhaar_Logo.svg.png" alt="Aadhar Logo" class="aadhar-logo">
    <div class="container">
       
        <h2>Aadhar Enrollment Form</h2>

        <form action="/postenroll" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="age">Age:</label>
                    <input type="number" id="age" name="age" class="form-control" min="0" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="house">House No:</label>
                    <input type="text" id="house" name="house" class="form-control" required>
                </div>
                <div class="form-group col-md-8">
                    <label for="street">Street:</label>
                    <input type="text" id="street" name="street" class="form-control" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="district">District:</label>
                    <input type="text" id="district" name="district" class="form-control" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="postal">Postal Code:</label>
                    <input type="text" id="postal" name="postal" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="gender">Gender:</label>
                    <select id="gender" name="gender" class="form-control" required>
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="dob">Date of Birth:</label>
                <input type="date" id="dob" name="dob" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="tel" id="phone" name="phone" class="form-control" required>
            </div>
            <input type="submit" value="Submit" onclick="confirmSubmission()" class="btn btn-primary">

        </form>
    </div>
</body>

<script>
    // Function to display a confirmation dialog before form submission
    function confirmSubmission() {
        // Display a confirmation dialog
        const confirmation = confirm("Are you sure you want to submit the form?");
        
        // If user confirms, submit the form
        if (confirmation) {
            return true; // Allow form submission
        } else {
            return false; // Prevent form submission
        }
    }
</script>



</html>
