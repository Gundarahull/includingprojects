<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Report</title>
    <!-- Bootstrap CSS link -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #afa994;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #007bff;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        .table {
            margin-top: 20px;
        }

        .table th,
        .table td {
            border: 1px solid #dee2e6;
            padding: 8px;
        }

        .table th {
            background-color: #007bff;
            color: #fff;
        }

        .total-row {
            font-weight: bold;
            background-color: #f2f2f2;
        }

        .login-time,
        .logout-time {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1> Daily Login Logout Report</h1>

        <% for (const date in groupedLogs) { %>
            <h2><%= date %></h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Login Time</th>
                        <th>Logout Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% const logs = groupedLogs[date].logs; %>
                    <% for (let i = 0; i < logs.length; i++) { %>
                        <tr>
                            <td class="login-time"><%= logs[i].loginTime %></td>
                            <td class="logout-time"><%= logs[i].logoutTime %></td>
                        </tr>
                    <% } %>
                    <tr class="total-row">
                        
                    </tr>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>
